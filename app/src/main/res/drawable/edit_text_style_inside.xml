<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape>
            <solid android:color="#C8EB92"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="5dp"
                android:right="5dp"
                android:top="10dp"
                />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#E1F1C6"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="5dp"
                android:right="5dp"
                android:top="10dp"
                />
        </shape>
    </item>

</selector>