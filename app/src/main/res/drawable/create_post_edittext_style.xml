<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="15dp"
                android:left="5dp"
                android:right="5dp"
                android:top="15dp"
                />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#B4EA63"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="15dp"
                android:left="5dp"
                android:right="5dp"
                android:top="15dp"
                />
        </shape>
    </item>

</selector>