<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.rawr.MainActivities.Newsfeed_screen"
    android:background="#BBE778">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/newsfeed_friends_sliding_list">

        <RelativeLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/newsfeed_buttons_container">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_search"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_profile"
                    android:layout_marginTop="65dp"
                    android:layout_toEndOf="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/newsfeed_imageView_localization"
                    android:layout_below="@+id/newsfeed_imageView_profilePicture"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_notifications"
                    android:layout_marginLeft="65dp"
                    android:layout_below="@+id/newsfeed_imageView_profilePicture" />

            </RelativeLayout>

            <ListView
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/newsfeed_list"
                android:layout_alignParentStart="true"
                />
            </RelativeLayout>
        <ListView
            android:id="@+id/newsfeed_friends_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:background="#fff"/>
        </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
