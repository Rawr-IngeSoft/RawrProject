<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#E3F1DF"
    tools:context="com.example.david.rawr.MainActivities.Newsfeed_screen"
    >
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/newsfeed_friends_sliding_list">

        <RelativeLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/newsfeed_buttons_container">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_search"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_profile"
                    android:layout_marginTop="65dp"
                    android:layout_toEndOf="@+id/newsfeed_imageView_profilePicture" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/newsfeed_imageView_localization"
                    android:layout_below="@+id/newsfeed_imageView_profilePicture"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/newsfeed_imageView_notifications"
                    android:layout_marginLeft="65dp"
                    android:layout_below="@+id/newsfeed_imageView_profilePicture" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
            <EditText
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:textSize="20dp"
                android:textColor="#000000"
                android:gravity="top"
                android:hint="Share your thinkings..."
                android:layout_height="80dp" />
            <ImageView
                android:layout_width="100dp"
                android:background="#000000"
                android:layout_height="40dp"
                android:id="@+id/newsfeed_post_button"
                android:layout_gravity="right"/>
            <ListView
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="0dp"
                android:divider="@null"
                android:id="@+id/newsfeed_list"
                android:layout_alignParentStart="true"
                />
            </LinearLayout>
            </RelativeLayout>
        <ListView
            android:id="@+id/newsfeed_friends_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:background="#fff"/>
        </android.support.v4.widget.DrawerLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/newsfeed_progress_animation"
            android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
