<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/fragment_choose_pet_container" android:layout_gravity="center" android:orientation="vertical" tools:context="com.example.david.rawr.Fragments.ChoosePetFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/choosePetImageView"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/choosePetName"
                android:text="Username"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/animal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosePetType"
                    android:text="Name"
                    android:textSize="15dp"
                    android:typeface="monospace"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/birthday_cake"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosePetBirthday"
                    android:text="LastName"
                    android:typeface="monospace"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
